{
  "name": "savebucks",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "run-p dev:*",
    "dev:web": "npm run -w apps/web dev",
    "dev:api": "npm run -w apps/api dev",
    "dev:admin": "npm run -w apps/admin dev",
    "dev:worker": "npm run -w apps/worker dev",
    "dev:telegram": "npm run -w apps/worker telegram:dev",
    "build": "npm run -w apps/api build && npm run -w apps/web build",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^15.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "pg": "^8.16.3"
  }
}
